{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Approval",
  "type": "object",
  "allOf": [
    {
      "$ref": "./approval_request.json"
    },
    {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "approver": {
          "type": "string"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "cancelled", "submitted"]
        },
        "kage": {
          "type": "string"
        }
      }
    }
  ]
}
